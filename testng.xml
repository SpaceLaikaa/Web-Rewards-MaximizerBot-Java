<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="BingAutomationSuite" verbose="1" thread-count="2" parallel="tests">

    <test name="Desktop Testleri">
        <groups>
            <run>
                <include name="desktop" />
            </run>
        </groups>
        <classes>
            <class name="bingAutomation" />
        </classes>
    </test>

    <test name="Mobile Testleri">
        <groups>
            <run>
                <include name="mobile" />
            </run>
        </groups>
        <classes>
            <class name="bingAutomation" />
        </classes>
    </test>

</suite>